@page
@using Client
@model CustomersModel
@{
    ViewData["Title"] = "Customers Page";
}

<div class="container">
    <div class="row">
        <h1 class="display-4">Customers API</h1>
    </div>
    <div class="row card" style="padding:20px; margin-bottom:2em;">
        <form method="POST">
            <input type="text" name="name" placeholder="Customer name" />
            <input type="email" name="email" placeholder="Customer email" />
            <button class="btn btn-primary">Create Customer</button>
        </form>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Customer cust in Model.CustomerList)
                {
                    <tr>
                        <td>@cust.name</td>
                        <td>@cust.email</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>